<h1>Listing messages</h1>

<table>
  <tr>
    <th>Content</th>
    <th>From</th>
  </tr>

<% @messages.each do |message| %>
  <tr>
    <td><%=h message.content %></td>
    <td><%=h message.from_number %></td>
    <td><%= link_to 'Show', [message.user, message] %></td>
    <td><%= link_to 'Edit', edit_user_message_path(message.user, message) %></td>
    <td><%= link_to 'Destroy', [message.user, message], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New message', new_user_message_path(params[:user_id]) %>