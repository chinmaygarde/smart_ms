<h1>New message</h1>

<% form_for([@message.user, @message]) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.label :from_number %><br />
    <%= f.text_field :from_number %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', user_messages_path(@message.user_id) %>