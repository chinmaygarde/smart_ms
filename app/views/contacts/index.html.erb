<h1>Listing contacts</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Phone</th>
    <th>Email</th>
  </tr>

<% @contacts.each do |contact| %>
  <tr>
    <td><%=h contact.first_name %></td>
    <td><%=h contact.last_name %></td>
    <td><%=h contact.phone %></td>
    <td><%=h contact.email %></td>
    <td><%= link_to 'Show', [contact.user, contact] %></td>
    <td><%= link_to 'Edit', edit_user_contact_path(contact.user, contact) %></td>
    <td><%= link_to 'Destroy', [contact.user, contact], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New contact', new_user_contact_path(params[:user_id]) %>