<h1>Editing conversation</h1>

<% form_for([@conversation.user, @conversation]) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', [@conversation.user, @conversation] %> |
<%= link_to 'Back', user_conversations_path(@conversation.user) %>