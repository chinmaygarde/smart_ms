<h1>Listing conversations</h1>

<table>
  <tr>
    <th>User</th>
    <th>Title</th>
  </tr>

<% @conversations.each do |conversation| %>
  <tr>
    <td><%=h conversation.user_id %></td>
    <td><%=h conversation.title %></td>
    <td><%= link_to 'Show', [conversation.user, conversation] %></td>
    <td><%= link_to 'Edit', edit_user_conversation_path(conversation.user, conversation) %></td>
    <td><%= link_to 'Destroy', [conversation.user, conversation], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New conversation', new_user_conversation_path(params[:user_id]) %>